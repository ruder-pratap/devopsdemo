@model ProductViewModel
@{
    ViewBag.Title = "Product Details";
}
<div class="container">

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.LabelFor(x=>x.Id)</th>
                <th>@Html.LabelFor(x => x.Name)</th>
                <th>@Html.LabelFor(x => x.Description)</th>
                <th>@Html.LabelFor(x => x.Quantity)</th>
                <th>@Html.LabelFor(x => x.Price)</th>
                <th>@Html.LabelFor(x => x.Discount)</th>
                <th>@Html.LabelFor(x => x.ExpirationDate)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Name</td>
                    <td>@Model.Description</td>
                    <td>@Model.Quantity</td>
                    <td>@Model.Price</td>
                    <td>@Model.Discount</td>
                    <td>@Model.ExpirationDate</td>
                    <td><a href="/Product/index">Back to list</a> | <a href="/Product/Edit/@Model.Id">Edit </a> | <a href="/Product/Delete/@Model.Id">Delete</a></td>
                </tr>
            
        </tbody>
    </table>
</div>
